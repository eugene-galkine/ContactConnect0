<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eg.contactconnect0.MainActivity">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_flipper">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="84">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    >

                    <TextView
                        android:text="Name:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:textColor="@android:color/black"
                        android:lines="1"
                        android:layout_weight="0.4"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameTextView"
                        android:lines="1"
                        android:layout_weight="0.4"/>

                    <Button
                        android:text="Edit"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameEditButton"
                        android:layout_weight="0.1"
                        android:textSize="12sp"
                        android:onClick="nameEditButton"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/nameCheckBox"
                        android:onClick="nameCheckButton"
                        android:checked="true"
                        android:layout_weight="0.1"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    >

                    <TextView
                        android:text="Phone Number:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:textColor="@android:color/black"
                        android:lines="1"
                        android:layout_weight="0.4"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/phoneTextView"
                        android:lines="1"
                        android:layout_weight="0.4"/>

                    <Button
                        android:text="Edit"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/phoneEditButton"
                        android:layout_weight="0.1"
                        android:textSize="12sp"
                        android:onClick="phoneEditButton"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/phoneCheckBox"
                        android:onClick="phoneCheckButton"
                        android:checked="true"
                        android:layout_weight="0.1"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    >

                    <TextView
                        android:text="Email:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textColor="@android:color/black"
                        android:lines="1"
                        android:layout_weight="0.4"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailTextView"
                        android:lines="1"
                        android:layout_weight="0.4"/>

                    <Button
                        android:text="Edit"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailEditButton"
                        android:layout_weight="0.1"
                        android:textSize="12sp"
                        android:onClick="emailEditButton"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/emailCheckBox"
                        android:onClick="emailCheckButton"
                        android:checked="true"
                        android:layout_weight="0.1"/>

                </TableRow>

            </TableLayout>

            <Button
                android:text="Scan QR Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonQRRead"
                android:layout_weight="8"
                android:onClick="qrScanButton"/>

            <Button
                android:text="Generate QR Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonQR"
                android:layout_weight="8"
                android:onClick="qrWriteButton"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/qrimage"/>

            <Button
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:onClick="qrBackButton"/>
        </FrameLayout>

    </ViewFlipper>

</RelativeLayout>
